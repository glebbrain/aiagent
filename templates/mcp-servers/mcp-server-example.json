[
    {
        "active": false,
        "name": "MCP Server for program",
        "url": "http://login:password@localhost:port/mcp",
        "description": "MCP Server for program with actions: start, stop, get-log, get-mcp-commands",
        "type": "mcp-server",
        "version": "0.0.1",
        "auth": {
            "login": "",
            "password": "",
            "token": ""
        },
        "timeout": 300,
        "actions": [
            {
                "action": "set-connection",
                "description": "set MCP server connection",
                "parameters": {
                    "workspaceFolder": "${workspaceFolder}",
                    "logLevel": "all",
                    "logFile": "${workspaceFolder}/.logs/mcp-server-program-version.log"
                }
            },
            {
                "action": "start",
                "description": "start program",
                "parameters": {}
            },
            {
                "action": "stop",
                "description": "stop program",
                "parameters": {}
            },
            {
                "action": "get-log",
                "description": "get program log",
                "parameters": {}
            },
            {
                "action": "get-mcp-commands",
                "description": "get MCP commands",
                "parameters": {}
            }
        ]
    }
]